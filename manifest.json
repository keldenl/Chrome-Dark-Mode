{
    "manifest_version": 2,
  
    "name": "Chrome Dark Mode",
    "description": "This extension allows the user to activate dark mode to any website online.",
    "version": "1.0",

  
    "browser_action": {
      "default_icon": "imgs/default-light.png",
      "default_popup": "popup.html",
      "default_title": "Activate Dark Mode"
    },

    "background": {
        "scripts": ["js/stateFunc.js", "js/background.js"],
        "persistent" : true
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/initial.js"]
        }
    ],

    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "*://*/*"
    ]
  }